CREATE TABLE `productos-construccion`.`user` (
  `id` INT NULL AUTO_INCREMENT,
  `first_name` VARCHAR(100) NOT NULL,
  `last_name` VARCHAR(100) NOT NULL,
  `email` VARCHAR(100) NOT NULL,
  `password` VARCHAR(100) NOT NULL,
  `photo` VARCHAR(500) NOT NULL,
  `category_id` VARCHAR(100) NOT NULL,
  PRIMARY KEY (`id`));



CREATE TABLE `productos-construccion`.`products` (
  `id` INT NOT NULL,
  `name` VARCHAR(100) NOT NULL,
  `desctiption` TEXT NOT NULL,
  `photo` VARCHAR(500) NOT NULL,
  `price` DECIMAL(10,2) NOT NULL,
  `discount` DECIMAL(5,2) NOT NULL,
  `stock` INT NOT NULL,
  `category_id` INT NOT NULL,
  PRIMARY KEY (`id`));


CREATE TABLE `productos-construccion`.`user_x_products` (
  `id` INT NOT NULL,
  `user_id` INT NOT NULL,
  `product_id` INT NOT NULL,
  `comentarios` TEXT NULL,
  `fecha_comentario` DATETIME NULL,
  PRIMARY KEY (`id`),
  CONSTRAINT `user_id`
    FOREIGN KEY ()
    REFERENCES `productos-construccion`.`user` ()
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `product_id`
    FOREIGN KEY ()
    REFERENCES `productos-construccion`.`products` ()
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
